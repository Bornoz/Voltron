# ─── Voltron Server Configuration ───────────────────────
# Copy this file to .env and adjust values as needed.

# ── Required in production ──────────────────────────────
# Shared secret for interceptor <-> server authentication.
# Generate with: openssl rand -hex 32
VOLTRON_INTERCEPTOR_SECRET=change-me-to-a-32-char-random-string

# ── Authentication ─────────────────────────────────────
# Secret key for signing auth tokens (required in production).
# Generate with: openssl rand -hex 32
VOLTRON_AUTH_SECRET=change-me-to-a-random-secret

# Dashboard admin credentials
VOLTRON_ADMIN_USER=admin
VOLTRON_ADMIN_PASS=change-me

# ── Optional ────────────────────────────────────────────
# Server port (default: 8600)
VOLTRON_PORT=8600

# Server bind address (default: 127.0.0.1)
VOLTRON_HOST=127.0.0.1

# SQLite database file path (default: data/voltron.db)
VOLTRON_DB_PATH=data/voltron.db

# Log level: fatal | error | warn | info | debug | trace (default: info)
VOLTRON_LOG_LEVEL=info

# GitHub Personal Access Token for repo analysis features
VOLTRON_GITHUB_TOKEN=

# Path to Claude CLI binary (default: claude)
VOLTRON_CLAUDE_PATH=claude

# Default model for AI agents (default: claude-sonnet-4-20250514)
VOLTRON_AGENT_MODEL=

# Agent timeout in milliseconds (default: 600000 = 10 min)
VOLTRON_AGENT_TIMEOUT=600000

# Node environment: development | production | test (default: development)
NODE_ENV=production
